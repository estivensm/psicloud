<% if @pacientes != nil%>

  <% if @pacientes.count != 0%>
 <div class="row">
 <div class="col-md-12 text-right">
   <%= will_paginate @pacientes%>
 </div>
   
 </div>
   
 
  <% @pacientes.each do |paciente| %>


<div class="row pat" style = "background:whitesmoke;padding:10px">
<div class="col-md-2 text-center" >
   <%= paciente.avatar? ? image_tag(paciente.avatar_url) : image_tag("https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcRuEG5mQKFGi9hNgrdBJnEyBfw2Kl0JNXwoHiXjVeKQemKOQqFe")  %>
</div>
 <div class="col-md-10" style ="margin-top: 20px;">
  <span style = "font-size:18px!important;margin-right:10px;color:gray">
              <%= paciente.first_name %>
              <%= paciente.second_name %>
              <%= paciente.first_last_name %>
         
            </span>
            <br>
 <span style = "font-size:14px!important;margin-right:10px;color:gray">
           CC :
            <%= paciente.document %>
            </span>
 <hr>
       <%= link_to 'Ver Paciente ' , patient_path(paciente), :class =>
            " btn btn-primary marg" %>
       <%if paciente.clinic_histories.any?%>    
       <%= link_to 'Ver Historia Clínica ' , patient_clinic_history_path(paciente,paciente.clinic_histories.first.id), :class =>
            " btn btn-primary marg" %>
            <%= link_to 'Gestionar Historia Clínica ' , edit_patient_clinic_history_path(paciente,paciente.clinic_histories.first.id), :class =>
            " btn btn-primary marg" %>
       <%end%>
</div>
 


  

</div>


    
    <script>
    $('.Cr').show();
 
  </script>
    <hr>
  <% end %>
  <% else %>
  <div class="jumbotron text-center" style="padding:0px">
  <h2>¡Lo sentimos!</h2>
  <p>No hay Pacientes registrados con los criterios de busqueda ingresados</p>
  <p>  <%= link_to 'Nuevo Paciente', new_patient_path , :class=>"btn btn-primary btn-lg"%></p>
  <script>
    $('.Cr').hide();

  </script>
</div>
  <% end %>

  <%else%>
 
  <script>
    $('.Cr').show();
    
  </script>

<% end %>


<style>
.pat img
{
    width: 80px;
    border-radius: 40px;
}
  
</style>