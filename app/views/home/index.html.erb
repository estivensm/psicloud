


<% if @pacientes_count.count != 0%>
<div class="container-fluid search-cont">
	
<div class="row">
<div class="col-md-12">
  

<div class="padding">
    <div class="full col-sm-12 search-p">
      <!-- content -->
      <div class="row">
        <!-- main col left -->
        <div class="col-sm-12">
          <header class="sb-page-header" style = "padding-bottom:0px!important">
            <div class="">
              <%= form_tag root_path, :method =>
              'get', remote: true, class: 'js-filter' do %>
     
                
                  <div >
                    <h2 style = "margin-top:50px;color:white !important;font-size:45px;text-align:center!important">Buscar Paciente</h2>
                    <br>
     
                    <div class="row">
                      <div class="col-md-6 col-md-offset-3">
                        <div class="" id="">
                          <%= text_field_tag :search, nil, :placeholder =>
                          "Ingresa Nombre o Cédula", :class => 'form-control query' , style: "height: 40px !important; border-radius: 4px !Important;"%>

                        </div>
                         <br>
                         
                          <div class="row">
                            <div class="col-md-12" style = "text-align:center">
                              <%= link_to 'Nuevo Paciente', new_patient_path , :class=>"btn btn-primary btn-lg Cr js-filter"%></div>
                          </div>
                        
                      </div>
                    </div>
                    <br>
                  </div>
                <% end %>
                 
            </div>    
          </header>
          <br/>

        
        </div>
      </div>
    </div>
  </div>        

  </div>

</div></div>


<div class="container">
<br>
<div class="row">
              <div class="col-md-8 col-md-offset-2 jm">
<div class = "personal">
            <div class="row">
              <div class="col-md-12 jm">
                <%= render partial: "personas" %></div>
            </div>
          </div>
             </div>
          </div>
<div class="row info">
<div class="col-md-12">

<p style = "margin-top:30px;font-size:20px;">   <i class="fa fa-calendar icon" color-gray icon" aria-hidden="true"></i> Próximas Citas </p>
<% @citas.where(state: "Vigente").last(4).each do |cita|%>
<div class="col-md-6">
 <div class="alert alert-info" role="alert" id="cambio<%= cita.id%>">
    <span style="font-size:18px;margin-left:10px;"><%=cita.patient.first_name%> <%=cita.patient.first_last_name%></span> <%=get_date_hora(cita.start_datetime)%>
    <br>
    <br>
  <div>
    <%= link_to "Realizada", cambiar_path(cita.id, "Realizada"),remote: true, method: :post, class: "btn1", style: "font-size: 10px;"%>
                   
    <%= link_to "Cancelar", cambiar_path(cita.id, "Cancelada" ),remote: true, method: :post, class: "btn2", style: "font-size: 10px;"  %>

    <%= link_to "No Asistió", cambiar_path(cita.id , "No Asistio"),remote: true, method: :post, class: "btn3", style: "font-size: 10px;"  %>
  </div>
</div>
</div>
<%end%>



</div>

    



  </div>
  
</div>
<%else%>
<div class="container" style="margin-top: 50px">
    <div class="row">
        <div class="col-md-12 np">
        <img style = "width:200px" src="https://cdn3.iconfinder.com/data/icons/mental-illness-and-brain-disorder/560/depression-mental-illness-003-512.png" alt="">  

        <h3>! AÚN NO TIENES PACIENTES ¡</h3>
        
        <%= link_to "CREA EL PRIMERO", new_patient_path(), class: "crear_paciente btn btn-primary" %>
        
        </div>
      
    </div>
</div>
<%end%>
