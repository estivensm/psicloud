<div class="container">
   <div class="row" >
    <br>
    <div class = "row title-table">

       <div class = "col-md-8"  style="padding-left: 20px;">
          <p>Historial clinico Familiar <span class="label label-primary"><%= @clinic_history_families.count%></span> <span style = "font-size:12px;margin-left:20px;"><%= page_history_families @clinic_history_families, :entry_name => 'Historia Clinica de Familias' %></span> </p>
       </div>


       <div class = "col-md-2" style= "float: right; padding-right: 10px;">
          <%= link_to 'Nuevo', new_clinic_history_family_path, class: "btn btn-primary", style: "float: right;" %>
       </div>
    </div><br>

  <div class="content-table">
    <table class="table">
      <thead>
        <tr class="tr-table">
          <th>Pacientes</th>
          <th>Razon de Consulta</th>
          <th class="actions">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @clinic_history_families.each do |clinic_history_family| %>
          <tr>
            <td>
              <% clinic_history_family.patients.each do |patient| %>
                <%= patient.first_name + " " + patient.first_last_name + " , " %> 
              <% end -%>
              </td>
            <td><%= clinic_history_family.reason_consultation %></td>
            <td>

            <%= link_to clinic_history_family, class: "btn btn-primary" do%>
                <i class="fas fa-eye" style = "font-size:20px;" aria-hidden="true"></i>
            <% end -%>

            <%= link_to edit_clinic_history_family_path(clinic_history_family), class: "btn btn-primary" do%>
                <i class="fas fa-edit" style = "font-size:20px;" aria-hidden="true"></i>
            <% end -%>

            <%= link_to clinic_history_family, method: :delete, data: {
              confirm: 'Â¿Estas Seguro?',
              'confirm-button-text': 'Borrar',
              'cancel-button-text': 'Cancelar',
              'confirm-button-color': '#CC0000',
               text: 'Recuerda que el registro se borrara permanentemente',
              'image-url': ''}, class: "btn btn-danger" do %>
              <i class="fa fa-trash" style = "font-size:20px;" aria-hidden="true"></i>
              <% end -%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>
</div>

