<div class="container">
   <div class="row" >
    <br>
    <div class = "row title-table">

       <div class = "col-md-8"  style="padding-left: 20px;">
          <p>Historial de Parejas Creados <span class="label label-primary"><%= @clinic_history_couples.count%></span> <span style = "font-size:12px;margin-left:20px;"><%= page_history_couple @clinic_history_couples, :entry_name => 'Historia Clinica de Parejas' %></span> </p>
       </div>


       <div class = "col-md-2" style= "float: right; padding: 0px;">
          <%= link_to 'Nuevo', new_clinic_history_couple_path, class: "btn btn-primary", style: "float: right;" %>
       </div>
    </div><br>

<div class = "row hidden-xs hidden-sm"> 
  <div class="col-md-12">
    <table class="table" style="margin-left: 10px;">
      <thead>
        <tr class = "tr-table">
          <th class="td-avatar">Foto</th>
          <th class="td-paciente">Paciente</th>
          <th class="text-center">Cedula</th>

          <th class="td-avatar">Foto</th>
          <th class="text-center td-paciente">Paciente #2</th>
          <th class="text-center">Cedula</th>
          <th style="width: 157px; text-align: center;">Acciones</th>
        </tr>
      </thead>

      <tbody>
       <% @clinic_history_couples.each do |clinic_history_couple| %>
          <tr>
            <td>
               <%=  clinic_history_couple.patient.avatar? ? image_tag(clinic_history_couple.patient.avatar_url(:logo)) : image_tag("https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/44/user.jpeg")%>
            </td>

            <td class="text-center">
              <%= clinic_history_couple.patient.first_name%>  <%= clinic_history_couple.patient.second_name%>
            </td>

            <td class="text-center">
              <%= clinic_history_couple.patient.document%>
            </td>

            <td>
               <%=  clinic_history_couple.patient.avatar? ? image_tag(clinic_history_couple.patient.avatar_url(:logo)) : image_tag("https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/44/user.jpeg")%>
            </td>

            <td class="text-center">
              <%= clinic_history_couple.patient.first_name%>  <%= clinic_history_couple.patient.second_name%>
            </td>

            <td class="text-center">
              <%= clinic_history_couple.patient.document%>
            </td>

            <td>

            <%= link_to   clinic_history_couple, class: "btn btn-primary" do%>
                <i class="fas fa-eye" style = "font-size:20px;" aria-hidden="true"></i>
            <% end -%>

            <%= link_to   edit_clinic_history_couple_path(clinic_history_couple), class: "btn btn-primary" do%>
                <i class="fas fa-edit" style = "font-size:20px;" aria-hidden="true"></i>
            <% end -%>

            <%= link_to  clinic_history_couple, method: :delete, data: {
              confirm: 'Â¿Estas Seguro?',
              'confirm-button-text': 'Borrar',
              'cancel-button-text': 'Cancelar',
              'confirm-button-color': '#CC0000',
               text: 'Recuerda que el registro se borrara permanentemente',
              'image-url': ''}, class: "btn btn-danger" do %>
              <i class="fa fa-trash" style = "font-size:20px;" aria-hidden="true"></i>
              <% end -%>
          </tr>
          <% end %>
        </tbody>
      </table>
        <div class = "col-md-4 paginate text-left title-table1">
            <%= will_paginate @clinic_history_couples %>
        </div>
    </div>
  </div>
 </div>
</div>

