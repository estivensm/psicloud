.equal {
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
}
  .np
{
    text-align: center;
    color: gray;
    background: #f4f4f4;
    font-size: 40px;
    padding: 30px 0px;


}
.np h3
{ 
  
    font-size: 40px;
    margin-bottom: 30px;
  

}
.crear_paciente
{
  font-size: 20px;
  padding: 20px;
 
}
.sin-adjunto
{
    display: inline;
    padding: 5px 20px;
    background: #9a9a9a;
    color: white;
    border-radius: 4px;
    margin-right: 9px;
}
</style>