

<div class="row margin-top-40" >
   <div class="col-md-12" style="padding-left: 50px;">
      <%= link_to "inicio", root_path%>

   </div>
</div>


<%if @documents.count != 0%>
<div class="container">


   <div class="row" >
      <div class = "row title-table">
         <div class = "col-md-6">
            <p class="title-h2">Formatos <span class="label label-primary"><%=@documents.count%></span> <span style = "font-size:12px;margin-left:20px;"> <%= page_entries_info @documents, :entry_name => 'Documents' %></span> </p>
         </div>
         <div class = "col-md-4 paginate text-left title-table1">
            <%= will_paginate @documents%>
         </div>
         <div class = "col-md-2">

            <%= link_to 'Nuevo Formato', new_document_path, class: "btn btn-primary", remote:true if current_user.rol.create_doc  %>
         </div>
      </div>
   
      <div class = "row">
  

 <% @documents.each do |document| %>

 <div class="col-md-12">
   
 
<div class="panel panel-default" >
                        <div class="panel-heading">
                                   <div class="row">


              <div class="col-md-8" style="    color: #5bc0de;
    font-size: 16px;">
                    <%= document.name %><br> <span style="font-size:12px"><%= get_date(document.created_at) %></span>
              </div>
              

              <div class="col-md-4 text-right">
               <%if document.file_url%>
                   <%= link_to  document.file_url, class: "btn btn-primary", style:"margin-right:10px;" do  %>
                          <i class="fa fa-download" aria-hidden="true"></i> Descargar
                               <%end%>
                   <%else%>
                      <p class="sin-adjunto">Sin Adjunto</p>  
                   <%end%>
                       <%if current_user.rol.show_doc%>
        <%= link_to  document, class: "btnl btn-primary" do %>
             <i class="fa fa-eye" style = "font-size:20px;" aria-hidden="true"></i>
             <%end%>
      <%end%>
        <%if current_user.rol.edit_doc%>
          <%= link_to  edit_document_path(document),remote:true, class: "btnl btn-warning" do%>
             <i class="fa fa-pencil" style = "font-size:20px;" aria-hidden="true"></i>
             <%end%>
<%end%>
       <%if current_user.rol.delete_doc%>
      <%= link_to  document, method: :delete, data: { confirm: 'Are you sure?' }, class: "btnl btn-danger" do%>
             <i class="fa fa-trash" style = "font-size:20px;" aria-hidden="true"></i>
             <%end%><%end%>
              </div>
           
            
            
          </div>
                        </div>
                     
                      </div>

</div>

                       <% end %>
  </div>
    </div>
      </div>


 
 <%else%>
<div class="container" style="margin-top: 50px">
    <div class="row">
        <div class="col-md-12 np">


        <h3>! AUN NO HAS CREADO FORMATOS ยก</h3>
        
        <%= link_to "CREA EL PRIMERO", new_document_path, remote: true, class: "crear_paciente btn btn-primary" %>
        
        </div>
      
    </div>
</div>
<%end%>


<style>
  .np
{
    text-align: center;
    color: gray;
    background: #f4f4f4;
    font-size: 40px;
    padding: 30px 0px;


}
.np h3
{ 
  
    font-size: 40px;
    margin-bottom: 30px;
  

}
.crear_paciente
{
  font-size: 20px;
  padding: 20px;
 
}
.sin-adjunto
{
    display: inline;
    padding: 5px 20px;
    background: #9a9a9a;
    color: white;
    border-radius: 4px;
    margin-right: 9px;
}
</style>