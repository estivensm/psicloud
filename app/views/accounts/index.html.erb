<div id='cssmenu' style="margin-top: 40px;">
    <ul>
        <li><%= link_to "Inicio", root_path%></li> 
        <li class="active"><%= link_to "Cuentas", accounts_path%><li>
    </ul>
</div>
<br><br>

<div class="container">
  <div class="row" >
      <div class = "row title-table">
         <div class = "col-md-6" style="padding-left: 0px;">
            <p class="title-h2">Cuentas Creadas   <span class="label label-primary"><%=@accounts.count%></span> <span style = "font-size:12px;margin-left:20px;"></span> </p>
         </div>
         <div class = "col-md-4 paginate text-left title-table1">
            
         </div>
         <div class = "col-md-2">
 
         </div>
      </div>
      <hr class="hr">
      <div class = "row">
         <table class="table">
            <thead>
               <tr class = "tr-table">
      <th>Admin User</th>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Logo</th>
      <th>Usuarios</th>
      <th>Cantidad Usuarios</th>
      <th>Almacenamiento</th>
      <th>Pacientes</th>
      <!--<th>Tipo de Cuenta</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
       <td><%= account.admin_user %></td>
        <td><%= account.name %></td>
   
        <td><%= account.phone %></td>
        <td><%= account.email %></td>
        <td><%=image_tag account.logo_url , style: "width:100px;padding:10px;" if account.logo_url %></td>
        <td><% User.where(admin_user: account.admin_user).each do |user|%>
              <%=user.email%> ,
          <%end%>
        </td>
        <td><%= account.users_quantity %></td>
        <td><%= account.file_size %></td>
        <td class="text-center"><%= Patient.where(admin_user: account.admin_user).count %></td>
        <!-- <td><%= account.account_type %></td>-->
        <td>
        <%= link_to edit_account_path(account), class: "btn btn-primary" do %>
        <i class="fas fa-edit" aria-hidden="true"></i>
        <% end -%>

       </td>
      </tr>
    <% end %>
  </tbody>
</table>

      </div>
   </div>


