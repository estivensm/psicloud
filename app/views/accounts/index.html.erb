<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Logo</th>
      <th>Admin user</th>
      <th>Users quantity</th>
      <th>File size</th>
      <th>Account type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.address %></td>
        <td><%= account.phone %></td>
        <td><%= account.email %></td>
        <td><%= account.logo %></td>
        <td><%= account.admin_user %></td>
        <td><%= account.users_quantity %></td>
        <td><%= account.file_size %></td>
        <td><%= account.account_type %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

