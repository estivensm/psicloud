      <p><%= link_to "Inicio ",  root_path, :class => "linka" %> </p>
   </div>
</div>  
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12 lead">Informacion de la Cuenta
             <%= link_to  edit_account_path(@account),:class => "btn btn-warning pull-right" do %>
