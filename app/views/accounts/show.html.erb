                <div class="col-md-6 text-center">
                  <div class="activity-mini">
                    Pacientes Atendidos <br> <span><i class="glyphicon glyphicon-user text-muted"></i> <%= @patiens.count %></span>
                  </div>
               
                </div>
              </div>
            </div>
          </div>
          <hr>
