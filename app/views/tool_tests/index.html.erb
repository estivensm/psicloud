<div class="container margin-top-40">
<div class="row">
    <div class="col-md-12" style="padding-left: 50px;">
        <%= link_to "inicio", root_path%><span> | </span> 
        <%= link_to "pacientes", patients_path%> <span> | </span> 
        <%= link_to "#{@patient.first_name} #{@patient.first_last_name}", patient_path(@patient.id)%>
    </div>
</div>
<br>
<h1 class="h1-tittle imgedit"><%=action_type%> Historia Clinica de <%=@patient.first_name%> <%=@patient.first_last_name%> <%=image_tag @patient.avatar_url if @patient.avatar?  %></h1><br>  
<div class="menu-history">
 

<%if @clinic_history.child_history%>
	<%=render "menu_child"%>
    <%else%>	
    <%=render "menu"%>
<%end%>	


 

	
</div>

<div class="row antecedentes">
<br>
<br>
<div class="col-md-12 descnum2" style="border-right:1px solid gray">
<div class="col-md-6">
		<h3><i class="fa fa-user" aria-hidden="true"> </i>Herramientas de Evaluacion</h3>
</div>
<div class="col-md-6 text-right">
		<%= link_to 'Nueva Herramienta', patient_clinic_history_new_tool_tests_path(@clinic_history.patient_id,@clinic_history.id), remote: true, class: "btn btn-primary"  %>
</div>

	<table class="table">
		
		<thead>
			<tr class = "tr-table">
				<th style="width: 20%">Tipo</th>
				<th style="width: 35%">Descripcion</th>
				<th style="width: 35%">Adjunto</th>
				<th style="width: 10%"></th>

			</tr>
		</thead>
		<tbody>
				<% @clinic_history.tool_tests.each do |tool|%>
			<tr>
				<td><%= tool.type_tool %></td>
				<td><%= tool.description %></td>
				<td><%= (link_to "#{tool.attachment.file.filename}", tool.attachment_url, class: "linka") if tool.attachment_url%></td>

				<td><%= link_to patient_clinic_history_edit_tool_test_path(@clinic_history.patient_id,@clinic_history.id,  tool.id), remote: true, class: "icon" do %>
				<i class="fa fa-pencil" aria-hidden="true"></i>
				<%end%>

					<%= link_to  patient_clinic_history_destroy_tool_test_path(@clinic_history.patient_id,@clinic_history.id,  tool.id),method: :delete, data: { confirm: 'Â¿Estas seguro de eliminar este registro?' }, class: "icon" do %>
					 <i class="fa fa-trash" aria-hidden="true"></i>
					<%end%>
				</td>
			</tr>
			<%end%>
		</tbody>
	</table>
</div>

	
</div>

</div>

