<div class="container margin-top-40">
<div class="row">
    <div class="col-md-12" style="padding-left: 50px;">
        <%= link_to "inicio", root_path%><span> | </span> 
        <%= link_to "pacientes", patients_path%> <span> | </span> 
        <%= link_to "#{@patient.first_name} #{@patient.first_last_name}", patient_path(@patient.id)%>
    </div>
</div>

<h1 class="h1-tittle imgedit"><%=action_type%> Historia Clinica de <%=@patient.first_name%> <%=@patient.first_last_name%> </h1><br>  
<div class="menu-history">
 

<%if @clinic_history.child_history%>
	<%=render "menu_child"%>
    <%else%>	
    <%=render "menu"%>
<%end%>	


 

	
</div>

<div class="row antecedentes margin-top-40" style = "padding: 10px 45px;">



 <div class = "row title-table">
         <div class = "col-md-6">
            <p>Herramientas de evaluacón <span class="label label-primary"><%=@clinic_history.tool_tests.count%></span>  </p>
         </div>
      
         <div class = "col-md-6 text-right">
          <%= link_to 'Nueva Herramienta', patient_clinic_history_new_tool_tests_path(@clinic_history.patient_id,@clinic_history.id), remote: true, class: "btn btn-primary"  %>
         </div>
      </div>


<br><br>

<% @clinic_history.tool_tests.each do |tool|%>
      <div class="panel panel-default">
                        <div class="panel-heading">
                                   <div class="row">

              <div class="col-md-6" style="    color: #5bc0de;
    font-size: 18px;;">
                  <%= tool.type_tool %>   <span style="font-size:12px;margin-left: 20px;"><%= get_date(tool.created_at) %></span>
              </div>
              

              <div class="col-md-6 text-right">
               <%if tool.attachment_url%>
                   <%= link_to  tool.attachment_url, class: "btn btn-primary", style:"margin-right:10px;" do  %>
                          <i class="fa fa-download" aria-hidden="true"></i> Descargar Adjunto
                   <%end%>  
                   <%end%>
                        <%= link_to patient_clinic_history_edit_tool_test_path(@clinic_history.patient_id,@clinic_history.id,  tool.id), remote: true, class: "icon" do %>
				<i class="fa fa-pencil" aria-hidden="true"></i>
				<%end%>
                    <%= link_to  patient_clinic_history_destroy_tool_test_path(@clinic_history.patient_id,@clinic_history.id,  tool.id),method: :delete, data: { confirm: '¿Estas seguro de eliminar este registro?' }, class: "icon" do %>
					 <i class="fa fa-trash" aria-hidden="true"></i>
					<%end%>
              </div>
           
            
            
          </div>
                        </div>
                        <div class="panel-body">
                      <%= tool.description %>
                        </div>
                      </div>
<%end%>

</div>

	


</div>

<style>
.menu-history
{
    padding: 10px 12px;
    background: #efefef;
        text-align: center;
}

    
</style>