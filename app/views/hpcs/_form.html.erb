<div id="contact-modal" class="modal fade">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
        <h4 class="modal-title"><%=action_type%> EPS</h4>
      </div>
<%= form_with(model: @hpc, local: true) do |form| %>
  <% if @hpc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hpc.errors.count, "error") %> prohibited this hpc from being saved:</h2>

      <ul>
      <% @hpc.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="modal-body">

  <div class="form-group">
    <%= form.label "Nombre" %>
    <%= form.text_field :name, id: :hpc_name, :class => 'form-control', :required => true  %>
  </div>

  <div class="form-group">
    <%= form.label "Description" %>
    <%= form.text_area :description, id: :hpc_description, :class => 'form-control',:maxlength => 25  %>
  </div>


<%if action_name != "edit" %>
<%= form.hidden_field :admin_user , :value => current_user.admin_user %>
<%= form.hidden_field :user_id ,:value =>  current_user.id %>
<%end%>

 
<br>

      <div class="modal-footer text-center">


  
    <%= form.submit "Guardar", :class => 'btn btn-primary'  %>
     <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

 </div>
<% end %>
  </div>
  </div>
</div>
</div>
