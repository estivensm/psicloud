              <div class="col-md-6" style="    color: #5bc0de;
    font-size: 18px;;">
                    <%= back.type_background %> <span style="font-size:12px;margin-left: 20px;"></span>
              </div>
              

              <div class="col-md-6 text-right">
               <%if back.attachement_url%>
                   <%= link_to  back.attachement_url, class: "btn btn-primary", style:"margin-right:10px;" do  %>
                          <i class="fa fa-download" aria-hidden="true"></i> Descargar Adjunto
                   <%end%>  
                   <%end%>
                      
        <%= link_to patient_clinic_history_edit_background_personal_path(@clinic_history.patient_id,@clinic_history.id,  back.id), remote: true, class: "icon" do %>
				<i class="fa fa-pencil" aria-hidden="true"></i>
				<%end%>
        <%= link_to  patient_clinic_history_destroy_background_personal_path(@clinic_history.patient_id,@clinic_history.id,  back.id),method: :delete, data: { confirm: '¿Estas seguro de eliminar este registro?' }, class: "icon" do %>
					 <i class="fa fa-trash" aria-hidden="true"></i>
					<%end%>
              </div>
           
            
            
          </div>
                        </div>
                        <div class="panel-body">
