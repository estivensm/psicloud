<div class="container">
<h1 class="h1-tittle imgedit"><%=action_type%> Historia Clinica de <%=@patient.first_name%> <%=@patient.first_last_name%> <%=image_tag @patient.avatar_url if @patient.avatar?  %></h1><br>  

 <%= link_to "Primera Fase", edit_patient_clinic_history_path(@clinic_history.patient_id,@clinic_history.id), class: "btn btn-primary" ,style: "margin-left: 10%;"%>

  <%= link_to "Antecedentes", patient_clinic_history_backgrounds_path(@clinic_history.patient_id,@clinic_history.id), class: "btn btn-primary edit-active"%>
  
    <%= link_to "Herramientas de Evaluacion", patient_clinic_history_tool_tests_path(@clinic_history.patient_id,@clinic_history.id), class: "btn btn-primary"%>


  <%= link_to "Segunda Fase", patient_step3_path(@clinic_history.patient_id,@clinic_history.id), class: "btn btn-primary"%>
<hr>

<div class="row antecedentes">
<div class="col-md-6 descnum2" style="border-right:1px solid gray">
	<h3><i class="fa fa-user" aria-hidden="true"> </i> Antecedentes Personales</h3>
<%= link_to '+', patient_clinic_history_new_backgrounds_path(@clinic_history.patient_id,@clinic_history.id,"Personal"), remote: true, class: "crear"  %>
	<table class="table">
		
		<thead>
			<tr>
				<th>Tipo</th>
				<th>Descripcion</th>
				<th>Adjunto</th>

			</tr>
		</thead>
		<tbody>
				<% @clinic_history.backgrounds.where(clase: "Personal").each do |back|%>
			<tr>
				<td><%= back.type_background %></td>
				<td><%= back.description %></td>
				<td><%= (link_to "Archivo", back.attachment_url, class: "linka") if back.attachment_url%></td>
			</tr>
			<%end%>
		</tbody>
	</table>
</div>

<div class="col-md-6 descnum2">
	<h3><i class="fa fa-users" aria-hidden="true"></i> Antecedentes Familiares</h3>
<%= link_to '+', patient_clinic_history_new_backgrounds_path(@clinic_history.patient_id,@clinic_history.id,"Familiar"), remote: true, class: "crear"  %>
		<table class="table">
		
		<thead>
			<tr>
				<th>Tipo</th>
				<th>Descripcion</th>
				<th>Adjunto</th>

			</tr>
		</thead>
		<tbody>
			<% @clinic_history.backgrounds.where(clase: "Familiar").each do |back|%>
			<tr>
				<td><%= back.type_background %></td>
				<td><%= back.description %></td>
				<td><%= (link_to "Archivo", back.attachment_url, class: "linka") if back.attachment_url%></td>
			</tr>
			<%end%>
		</tbody>
	</table>
</div>
	
</div>

</div>

<style>

.antecedentes h3
{
	color: gray;
	text-align: center;
	display: inline-block;
	margin-right: 10px;
}
.descnum2
{
  max-height: 350px !important;
    overflow: auto;
    height: 350px;
}
.crear
{
	font-size: 20px;
	    padding: 1px 10px;
    color: white;
    background: #428bca;
}
	
</style>