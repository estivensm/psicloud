<h1 class="h1-tittle imgedit"><%=action_type%> Historia Clinica de <%=@patient.first_name%> <%=@patient.first_last_name%></h1><br>

<div class= "menu-history">

<%if @clinic_history.child_history%>
	<%=render "menu_child"%>
    <%else%>	
    <%=render "menu"%>
<%end%>	
</div>



<div class="row antecedentes">
<br>
<br>
<div class="col-md-6" style="border-right:1px solid #428bca;">
	<h3><i class="fa fa-users" aria-hidden="true"> </i> Antecedentes Familiares</h3>
<%= link_to 'Nuevo Antecedente', patient_clinic_history_new_backgrounds_path(@clinic_history.patient_id,@clinic_history.id), remote: true, class: "btn btn-primary"  %>
	


<hr>

<% @clinic_history.backgrounds.each do |back|%>
   <div class="panel panel-default">
                        <div class="panel-heading">
                                   <div class="row">

              <div class="col-md-6" style="    color: #5bc0de;
    font-size: 18px;;">
                    <%= back.type_background %> <span style="font-size:12px;margin-left: 20px;"></span>
              </div>
              

              <div class="col-md-6 text-right">
               <%if back.attachment_url%>
                   <%= link_to  back.attachment_url, class: "btn btn-primary", style:"margin-right:10px;" do  %>
                          <i class="fa fa-download" aria-hidden="true"></i> Descargar Adjunto
                   <%end%>  
                   <%end%>
                      
        <%= link_to patient_clinic_history_edit_backgrounds_path(@clinic_history.patient_id,@clinic_history.id,  back.id), remote: true, class: "icon" do %>
				<i class="fa fa-pencil" aria-hidden="true"></i>
				<%end%>
        <%= link_to  patient_clinic_history_destroy_backgrounds_path(@clinic_history.patient_id,@clinic_history.id,  back.id),method: :delete, data: { confirm: '¿Estas seguro de eliminar este registro?' }, class: "icon" do %>
					 <i class="fa fa-trash" aria-hidden="true"></i>
					<%end%>
              </div>
           
            
            
          </div>
                        </div>
                        <div class="panel-body">
                      <%= back.description %>
                        </div>
                      </div>

<%end%>

</div>

<div class="col-md-6">
	<h3><i class="fa fa-user" aria-hidden="true"></i> Antecedentes Personales</h3>
<%= link_to 'Nuevo Antecedente', patient_clinic_history_new_background_personal_path(@clinic_history.patient_id,@clinic_history.id), remote: true, class: "btn btn-primary"  %>
<hr>
		<% @clinic_history.personal_backgrounds.each do |back|%>
   <div class="panel panel-default">
                        <div class="panel-heading">
