
<div class="row">
    <div class="col-md-11 titulo">
      <h2 align="center">HERRAMIENTA DE EVOLUCION</h2>
    </div>
     <div class="row">
        <table class="table table-responsive row1" style="margin-bottom: 0px !important;">
        <tr style="background: #46b8da; color: #fff; text-align: center;">
          <th>Pacientes</th>
        </tr>
      </table>
      <table class="table table-responsive row1">
        <tr style="color: #46b8da;">
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Documento</th>
          <th>Edad</th>
          <th>Sexo</th>
          <th>Ocupacion</th>
          <th>Estado Civil</th>
          <th>Parentesco</th>
        </tr>
      </thead>

        <tbody>
          <% @clinic_history_family.patients.each do |patient| %>  
            <tr>
              <td><%= patient.first_name %></td>
              <td><%= patient.first_last_name %></td>
              <td><%= patient.document %></td>
              <td><%= patient.age %></td>
              <td><%= patient.gender %></td>
              <td><%= patient.occupation %></td>
              <td><%= patient.civil_status %></td>
              <td> Con la <%= patient.contact_relationship %></td>
            </tr>
            <% end -%>

          <% @clinic_history_family.family_group.each do |familia| %>  
            <tr>
              <td><%= familia.name %></td>
              <td><%= familia.last_name %></td>
              <td><%= familia.document_number %></td>
              <td><%= familia.age %></td>
              <td><%= familia.sex %></td>
              <td><%= familia.occupation %></td>
              <td><%= familia.civil_status %></td>
              <td> Con la <%= familia.relationship %></td>
            </tr>
            <% end -%>
          </tbody>
    </table>

    </div>
    <br>

    <ul class="nav nav-tabs tab">
      <li class="active"><%=link_to "Heramientas de Evolucion" ,clinic_history_family_document_families_path(@clinic_history_family.id), style: "cursor: pointer;" %></li>
      <li class="link2"><%= link_to "Ayudas Diagnosticas", clinic_history_family_diagnostic_documets_path(@clinic_history_family.id), style: "cursor: pointer;"%></li>
      <li class="link2"><%= link_to "Documentos Legales", clinic_history_family_legan_documents_path(@clinic_history_family.id), style: "cursor: pointer;" %></li>
    </ul>
  <% if @document_families.any? %>
    <div class="container">
       <div class="row" style="margin-left: -2px;" >
        <br>
        <div class = "row title-table">

           <div class = "col-md-5"  style="padding-left: 20px;">
              <p>Heramientas de Evolucion <span class="label label-primary"><%= @document_families.count%></span>
           </div>

            <div class = "col-md-2" style= "float: right; padding-right: 10px; margin-right: 27px;">
              <%= link_to 'Nuevo', new_clinic_history_family_document_family_path  + "?params=tool", class: "btn btn-primary", remote: true  %>
           </div>
      </div>

        <% @document_families.each do |document_family| %>
             <div class="panel panel-default width">
                <div class="panel-heading">
                   <div class="row width">
                      <div class="col-md-6" style="color: #5bc0de;
                         font-size: 18px;">
                         <%= document_family.tool_type %>
                      </div>

                      <div class="col-md-6 text-right">
                        <%= link_to edit_clinic_history_family_document_family_path(@clinic_history_family.id, document_family)  + "?params=tool", remote: true do %>
                            <i class="fas fa-pencil-alt"></i>
                        <% end -%>

                         <%= link_to clinic_history_family_document_family_path(@clinic_history_family.id, document_family), method: :delete, data: {
                          confirm: '¿Estas Seguro?',
                          'confirm-button-text': 'Borrar',
                          'cancel-button-text': 'Cancelar',
                          'confirm-button-color': '#CC0000',
                           text: 'Recuerda que el registro se borrara permanentemente',
                          'image-url': ''} do %>
                          <i class="fa fa-trash" style = "font-size:20px;" aria-hidden="true"></i>
                          <% end -%>


                        
                      </div>
                   </div>
                </div>
                <div class="panel-body"> 
                   <strong>Descripción: </strong> <%= document_family.descripcion %>
                   <hr>

                   <% document_family.general_files.each do |file|%>
                     <% if file.file_url%>
                       <%= link_to  file.file_url, class: "btn btn-primary file", target: "_blank" do  %>
                       <i class="fa fa-download" aria-hidden="true"></i> <%=file.name%>
                       <% end %>  
                     <% end %>
                   <% end %>

                </div>
             </div>
            <% end %>
          </div>

      <div class = "col-md-12 paginate text-left title-table1">
         <%= will_paginate @document_families %>
      </div>
  </div>

<% else %>

<div class="row" style="padding: 0px 20px;">
  <div class="jumbotron">
      <h3>! AÚN NO HAS CREADO GESTION DOCUMENTAL FAMILIAR ¡ </h3>
       <%= link_to 'Nueva Heramientas de Evolucion', new_clinic_history_family_document_family_path + "?params=tool" , remote: true,  class: "btn btn-primary"  %>
  </div>
</div>

<% end %>

