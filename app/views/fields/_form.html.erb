  <div class="field">
    <%= form.label :requierd %>
    <%= form.check_box :requierd, id: :field_requierd %>
  </div>


   <div class="form-group">
               <%val1 = "" 
                  action_name == "edit" ? val1 = @field.form : val1 = "" %>
