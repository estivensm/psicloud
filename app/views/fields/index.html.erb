<br>
<div class="container" >
  <div class="row">
    <div class="col-md-12 export-icons text-right">
  </div>
</div>

<br>
   <div class="row">
      <div class = "row title-table">
         <div class = "col-md-6">
            <p class="title-h2">Campos Creados   <span class="label label-primary"><%=@fields.count%></span> <span style = "font-size:12px;margin-left:20px;"></span> </p>
         </div>

         <div class = "col-md-6 text-right">
          <%= link_to 'Nuevo Campo', new_field_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>

    <hr>
      <table class="table">
        <thead style="background-color: #306C95; color: #f1f1f1">
          <tr>
            <th>Name</th>
            <th>Type field</th>
            <th>State</th>
            <th>User</th>
            <th>Admin user</th>
            <th>Requierd</th>
            <th>Form</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @fields.each do |field| %>
            <tr>
              <td><%= field.name %></td>
              <td><%= field.type_field%></td>
              <td><% if field.state == true %>
              <span class="glyphicon glyphicon-ok"></span>
              <%else%>
              <span class="glyphicon glyphicon-remove"></span>
              <% end -%>
              </td>
              <td><%= field.user_id %></td>
              <td><%= field.admin_user %></td>
              <td><%= field.requierd %></td>
              <td><%= field.form %></td>
              <td>
              <%= link_to edit_field_path(field), class: "btn btn-primary" do %>
              <i class="fas fa-edit" style = "font-size:20px;" aria-hidden="true"></i>
              <% end -%>
                
              <%= link_to field, method: :delete, data: { confirm: 'Estas Seguro?' } , class: "btn btn-danger" do%>
             <i class="fa fa-trash" style = "font-size:20px;" aria-hidden="true"></i></td>
             <% end -%>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
<br>

<style type="text/css">
  .glyphicon-remove{
    color: red;
  }

  .glyphicon-ok{
    color: green;
  }


</style>