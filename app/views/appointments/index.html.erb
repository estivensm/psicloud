


<div class="container">
   <div class="row" >
      <div class = "row title-table">
         <div class = "col-md-6">
            <p>Citas <span class="label label-primary"><%=@appointments.count%></span> <span style = "font-size:12px;margin-left:20px;"> <%= page_entries_info @appointments, :entry_name => 'Citas' %></span> </p>
         </div>
         <div class = "col-md-4 paginate text-left title-table1">
            <%= will_paginate @appointments%>
         </div>
         <div class = "col-md-2">

            <%= link_to 'Nueva Cita', new_patient_appointment_path(@patient.id),remote:true, class: "btn btn-primary"  %>
         
         </div>
      </div>
      <hr class="hr">
      <div class = "row">
         <table class="table">
            <thead>
               <tr class = "tr-table">
      
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Observations</th>
      <th>Place</th>
      <th>Patient</th>
      <th>Admin user</th>
      <th>User</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.start_datetime %></td>
        <td><%= appointment.end_datetime %></td>
        <td><%= appointment.observations %></td>
        <td><%= appointment.place %></td>
        <td><%= appointment.patient_id %></td>
        <td><%= appointment.admin_user %></td>
        <td><%= appointment.user_id %></td>
        <td><%= appointment.attachment %></td>
        <td><%= link_to 'Show', patient_appointment_path(appointment.patient_id, appointment) %></td>
        <td><%= link_to 'Edit', edit_patient_appointment_path(appointment.patient_id, appointment), remote:true %></td>
        <td><%= link_to 'Destroy', patient_appointment_path(appointment.patient_id, appointment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
               <%end%>
            </tbody>
         </table>
      </div>
   </div>
</div>