<div id="send-mail" class="modal fade">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
            <h4 class="modal-title">Subir Formato</h4>
         </div>
         <%=form_tag send_history_path do %>
         <div class="modal-body">
            
            <%= hidden_field_tag :id, patient.id%>
            <div class="form-group">
               <label>Email</label>
               <%= email_field_tag :email,@patient.email, class:"form form-control"%> 
            </div>
            <div class="form-group">
               <label>Asunto</label>
               <%= text_field_tag :asunto,"Historia Clinica #{@patient.first_name} #{@patient.first_last_name}", class:"form form-control"%> 
            </div>
            <div class="form-group">
               <label>Mensaje</label>
               <%= text_area_tag :descripcion,nil, class:"form form-control"%>  
            </div>
         </div>
         <div class="modal-footer text-center">
            <%=submit_tag "enviar",class:"btn btn-primary"%>
         </div>
         <%end%>
      </div>
   </div>
</div>