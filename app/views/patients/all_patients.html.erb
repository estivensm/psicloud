      <div class="form-group fil">
         <%= form_tag(@route, :method => "get", id: "search-form") do %>
   
  <%= text_field_tag :search, params[:search], placeholder: "Nombre, Apellido, Documento", class: "form-control search" %>
   <%=select_tag 'search1', options_for_select(get_users.collect{ |u| ["#{u.names}", u.id, ] }),{:class => "form-control search psi", include_blank: "Psicologo" , placeholder: "hola"}%>
 

  
      
         <%= submit_tag "Buscar", :class => "btn btn-primary" %>
            <%= link_to "Cancelar Filtros", @route, style: "    margin-left: 20px;
    
    position: relative;
    top: 8px;"%>
    
         <% end %>
      </div>
   </div>
   <div class="col-md-3 text-right">
   
<% if action_name == "index" %>
        <%= link_to image_tag("https://cdn2.iconfinder.com/data/icons/file-formats-4-1/100/file_formats_4_csv-512.png"), patients_csv_path(format: "csv"), class: "icon-export"%>

       <%= link_to image_tag("http://iconbug.com/data/5b/507/52ff0e80b07d28b590bbc4b30befde52.png"), patients_path(:format => "pdf"), target:"_blank", class: "icon-export"%>
     <%end%>

  <% if action_name == "all_patients" %>
        <%= link_to image_tag("https://cdn2.iconfinder.com/data/icons/file-formats-4-1/100/file_formats_4_csv-512.png"), patients_csv_all_path(format: "csv"), class: "icon-export"%>

       <%= link_to image_tag("http://iconbug.com/data/5b/507/52ff0e80b07d28b590bbc4b30befde52.png"), all_patients_path(:format => "pdf"), target:"_blank", class: "icon-export"%>
     <%end%>   
   </div>

