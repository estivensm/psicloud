<p id="notice"><%= notice %></p>


<div class="row" style="margin: 20px 0px">
   <div class="col-md-5 col-md-offset-4 forms">
         <h1 class="text-center" style="color:#5bc0de" >GENERAR RIPS</h1>

    <%= form_tag( {:action =>
              'csv_all', :format => :csv}, :method => :get, :target => '_blank', :id => "signup")  do  %>
       <div class="row">
        <div class="col-md-6">
          <label>Fecha Desde</label><br>
        <%= date_field_tag :fecha1 , nil,class: "form form-control" %>
        </div>
        
      <div class="col-md-6">
          <label>Fecha Desde</label><br>
        <%= date_field_tag :fecha2 , nil ,class: "form form-control"%>
        </div>
        </div>
      <br><br>
      <%= submit_tag "Descargar" , class: "btn btn-primary"%>
    <%end%>
   </div>
   
</div>






<table class="table">
  <thead>
    <tr>
      <th>Tipo identificacion</th>
      <th>Numero identificacion</th>
      <th>Codigo entidad admin</th>
      <th>Tipo usuario</th>
      <th>Primer apellido</th>
      <th>Segundo apellido</th>
      <th>Primer nombre</th>
      <th>Segundo nombre</th>
      <th>Edad</th>
      <th>Unidad medida edad</th>
      <th>Sexo</th>
      <th>Codigo dpto</th>
      <th>Codigo municipio</th>
      <th>Zona residencial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @first_rips.each do |first_rip| %>
      <tr>
        <td><%= first_rip.tipo_identificacion %></td>
        <td><%= first_rip.numero_identificacion %></td>
        <td><%= first_rip.codigo_entidad_admin %></td>
        <td><%= first_rip.tipo_usuario %></td>
        <td><%= first_rip.primer_apellido %></td>
        <td><%= first_rip.segundo_apellido %></td>
        <td><%= first_rip.primer_nombre %></td>
        <td><%= first_rip.segundo_nombre %></td>
        <td><%= first_rip.edad %></td>
        <td><%= first_rip.unidad_medida_edad %></td>
        <td><%= first_rip.sexo %></td>
        <td><%= first_rip.codigo_dpto %></td>
        <td><%= first_rip.codigo_municipio %></td>
        <td><%= first_rip.zona_residencial %></td>
        <td><%= link_to 'Show', first_rip %></td>
        <td><%= link_to 'Edit', edit_first_rip_path(first_rip) %></td>
        <td><%= link_to 'Destroy', first_rip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

