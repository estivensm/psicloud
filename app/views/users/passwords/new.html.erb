<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

<div class="container" style="margin-top: 70px;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="thumbnail"><br>
      	<p class = "logop text-center" style = "color:#9a9a9a;    font-size: 30px"><img style= "width:200px;" id="slack" src="https://farm5.staticflickr.com/4539/38260696042_45b37e8f87_n.jpg"></p>

      	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  			<%= devise_error_messages! %><br>

		<h3 class="text-center linka" style="color:gray; font-weight: bold">¿Olvidaste tu contraseña?</h3><br>

  		<p class="text-center linka" style="color:gray">Ingresa tu email para enviarte las instrucciones</p><br>

        <div class="col-md-12" style="padding: 0px;">
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-at" style="color: #fff;"></i></span>
               <%= f.email_field :email, class: "form-control  required", :title => "Es un Campo Obligatorio", id: "cambio2", placeholder:"Email" %>
            </div>
            <br>
         </div>

		  <br>
    		 <div class="form-group">
				<%= f.submit "Enviar" , class: "btn btn-primary btn-block is", id: "register-button" , style:"font-size:18px"  do %>
       				<i class="fa fa-sign-in" aria-hidden="true"> </i> Iniciar Sesión
    			<% end %>
			</div>

			<div class="row">
  				<div class="col-md-10 col-md-offset-1 text-center color-gray" style="margin-top:10px; margin-bottom: 10px;">
					Ya estas Registrado <%= link_to "Inicia Sesión", new_session_path(resource_name), class: "iniciar" %> <br />
				</div>
  			</div>

  			  </div>
			<% end %>
    	  </div>
  		</div>
      </div>
  	</div>
  </div>
</div>


<style type="text/css">


  
  .thumbnail{

    border-radius: 3%;
    margin-left: 2px;
    padding-right: 20px; 
    padding-left: 20px;
    border-color: #02A8F4;
    border-right: 5px solid #02A8F4;
    border-left: 5px solid #02A8F4;

  }

  span{
    background: #5bc0de !important;
    border: 1px solid #5bc0de !important;
  }

  .form-control{
    border-color: #c5c5c5 !important;
  }

  .iniciar{
  	color: #02A8F4;
  	text-decoration: underline;
  }

</style>