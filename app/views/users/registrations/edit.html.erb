

<div class="row" style="margin-top: 40px;">
<div class="col-md-8 col-md-offset-2 login2">
<p class= "titulo-form">Editar Usuario</p>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<div class="col-md-6">
  <div class="col-md-10">
    <div class="form-group">
      <%= f.label "Email" %>
      <%= f.email_field :email, autofocus: true , :class => 'form-control' %>
    </div>  
  </div>
  <div class="col-md-10">
    <div class="form-group">
      <%= f.label "Nombres" %>
      <%= f.text_field :names, autofocus: true , :class => 'form-control' %>
    </div>  
  </div>
  <div class="col-md-10">
    <div class="form-group">
      <%= f.label "Apellidos" %>
      <%= f.text_field :last_names, autofocus: true , :class => 'form-control' %>
    </div>  
  </div>
  <div class="col-md-10">
    <div class="form-group">
<%val1 = "" 
 action_name == "edit" ? val1 = current_user.document_type : val1 = "" %>
    <%= f.label "Tipo de Documento" %>
     <%= f.select 'document_type', options_for_select(["C.C", "Pasaporte", "I.d"], val1), {},{:class => 'form-control'}%>
  </div>
  </div>
   <div class="col-md-10">
    <div class="form-group">
      <%= f.label "Teléfono o Número Celular" %>
      <%= f.text_field :phone, autofocus: true , :class => 'form-control' %>
    </div>  
  </div>
  <div class="col-md-10">
    <div class="form-group">
      <%= f.label "Documento" %>
      <%= f.text_field :document, autofocus: true , :class => 'form-control' %>
    </div>  
  </div>
  <div class="col-md-10">
    <div class="form-group">
      <%= f.label "Registro Medico" %>
      <%= f.text_field :medical_record, autofocus: true , :class => 'form-control' %>
    </div>  
  </div>
</div>
<div class="col-md-6">
  <div class="col-md-10">
    <div class="form-group">
      <%= f.label "Fecha de Nacimiento" %>
      <%= f.date_field :birth_date, autofocus: true , :class => 'form-control' %>
    </div>  
  </div>

  <div class="col-md-10">
    <div class="form-group">
      <%= f.label "Foto" %>
      <%= f.file_field :avatar, autofocus: true , :class => 'form-control' %>
    </div>  
  </div>


 <div class="col-md-10">
    <div class="form-group">
     <%= f.label "Contraseña" %> <i>(Deja en Blanco si no quieres cambiar)</i><br />
     <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      <% if @minimum_password_length %>
         
         <em><%= @minimum_password_length %> Caracteres minimo</em>
       <% end %>
     </div>
   </div>
    <div class="col-md-10">
  <div class="form-group">
    <%= f.label "Confirmar Contraseña"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
  </div>
</div>
 <div class="col-md-10">
  <div class="form-group">
    <%= f.label "Contraseña Actual" %> <i>(Tienes que ingresar la contraseña actual para cambiar)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" , :class => 'form-control'%>
  </div>
  </div>
</div>

  <div class="form-group">
    <%= f.submit "Editar",:class => 'btn btn-primary btn-block'  %>
  </div>
<% end %>



  </div>  </div>