

<div class="row sign_form">
<div class="col-md-4 col-md-offset-4 login1" style="padding-top: 50px;">
<p class = "logop text-center" style = "color:#9a9a9a;    font-size: 30px"><img style= "width:200px;" id="slack" src="https://farm5.staticflickr.com/4539/38260696042_45b37e8f87_n.jpg"></p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


<br>
   <div class="form-group">

    <%= f.email_field :email, autofocus: true , :class => 'form-control' , placeholder:"Email", style:"height:45px;font-size: 16px;border: 1px solid gainsboro !important;"%>
  </div>


<div class="form-group">
  
    <%= f.text_field :company , :class => 'form-control' , placeholder:"Nombre de la Empresa o Persona", style:"height:45px;font-size: 16px;border: 1px solid gainsboro !important;"%>
  </div>

  

  <%= f.hidden_field :account, :value => true %>
  <%= f.hidden_field :rol_id, :value => Rol.where(default: true).last.id %>
 
  



   <div class="form-group">
 
    <%= f.password_field :password, autocomplete: "off" , :class => 'form-control' , placeholder:"Contraseña", style:"height:45px;font-size: 16px;border: 1px solid gainsboro !important;"%>
  </div>

   <div class="form-group">

    <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'form-control', placeholder:"Confirmar Contraseña", style:"height:45px;font-size: 16px;border: 1px solid gainsboro !important;"%>
  </div>


   <div class="form-group">
    <%= f.submit "Crear Cuenta", :class => 'btn btn-primary btn-block is', style:"font-size:18px"  %>
  </div>
<% end %>

<div class="col-md-10 col-md-offset-1 text-center color-gray" style="margin-top:10px;">
Ya estas Registrado <%= link_to "Inicia Sesión", new_session_path(resource_name), class:"linka" %><br />
</div>
