    <ul class="nav nav-tabs" style="margin-left: 14px;">
      <li class=""><%=link_to "Gestion Documental Familiar", document_couple_families_path, style: "cursor: pointer;" %></li>
      <li class="active"><%= link_to "Gestion Diagnostico Familiar", diagnostic_documets_path, style: "cursor: pointer;"%></li>
      <li class=""><%= link_to "Gestion Legal Familiar", legan_documents_path, style: "cursor: pointer;" %></li>
    </ul>
  <% if @document_couple_families.any?%>
     <div class = "row title-table" style="margin-top: 13px;">
         <div class = "col-md-7 padding-left">
            <p>GESTION DIAGNOSTICO FAMILIAR <span class="label label-primary"><%=@document_couple_families.count%></span>  </p>
         </div>
      
         <div class = "col-md-5 text-right">
          <%= link_to 'Crear Nueva Gestion De Diagnostico Familiar', new_document_couple_family_path  + "?params=diagnostic", remote: true, class: "btn btn-primary"  %>
         </div>
      </div>

    <div class="col-md-12" style="padding-right: 0px;">
      <br>
      <% @document_couple_families.each do |document_couple_family| %>
        <div class="panel panel-default">

          <div class="col-md-1 float-top">

              <%= link_to edit_document_couple_family_path(document_couple_family) do %>
                <i class="fa fa-pencil" aria-hidden="true"></i>
              <% end -%>

              <%= link_to  document_couple_family, method: :delete, data: {
                confirm: '¿Estas Seguro?',
                'confirm-button-text': 'Borrar',
                'cancel-button-text': 'Cancelar',
                'confirm-button-color': '#CC0000',
                 text: 'Recuerda que el registro se borrara permanentemente',
                'image-url': ''} do %>
                 <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>

          </div>

          <div class="panel-heading">
            <%= document_couple_family.tool_type %>
          </div>

          <div class="panel-body">
            <p><%= document_couple_family.descripcion %></p>
          </div>

          <hr>

          <div class="row">
            <div class="col-md-12" style="padding-left: 24px; margin-bottom: 16px;">
              <% document_couple_family.general_files.each do |file|%>
                <% if file.file_url%>
                    <%= link_to  file.file_url, class: "btn btn-primary", style:"margin-right:10px;;margin-top:10px" do  %>
                      <i class="fa fa-download" aria-hidden="true"></i> <%=file.name%>
                    <% end %>  
                <% end %>
              <% end %>
            </div>
          </div>

        </div> 
      <% end -%> 

    </div>

    <% else %>

    <div class="jumbotron">
        <h3>! AÚN NO HAS CREADO GESTION DIAGNOSTICO FAMILIAR ¡ </h3>
         <%= link_to 'Crear Nueva Gestion De Diagnostico Familiar', new_document_couple_family_path + "?params=diagnostic", remote: true,  class: "btn btn-primary"  %>
    </div>

    <% end -%>

