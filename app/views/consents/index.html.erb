<div class="container" >
  <div class="row">
    <div class="col-md-12 export-icons text-right">
  </div>
</div>

<br>
   <div class="row">
      <div class = "row title-table">
         <div class = "col-md-6">
            <p class="title-h2">Consentimientos Creados   <span class="label label-primary"><%=@consents.count%></span> <span style = "font-size:12px;margin-left:20px;"></span> </p>
         </div>

         <div class = "col-md-6 text-right">
          <%= link_to 'Nuevo Consentimiento', new_consent_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<br>
<table class="table">
  <thead style="background-color: #306C95; color: #f1f1f1">
    <tr>
      <th>Nombre</th>

      <th>Body</th>
      <th>Titulo</th>
      <th>Primera Edad</th>
      <th>Segunda Edad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consents.each do |consent| %>
      <tr>
        <td><%= consent.user_id %></td>


        <td><%== consent.body %></td>
        <td><%= consent.title %></td>
        <td><%= consent.first_age %></td>
        <td><%= consent.second_age %></td>
        <td>
        <%= link_to edit_consent_path(consent), class: "btn btn-info" do %>
         <i class="fas fa-edit" style = "font-size:15px;" aria-hidden="true"></i>
        <% end -%>

        <%= link_to consent, method: :delete, data: { confirm: 'Estas Seguro?'}, class: "btn btn-danger" do %>
         <i class="fa fa-trash" style = "font-size:15px;" aria-hidden="true"></i></td>
        <% end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

