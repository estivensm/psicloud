<script>
   $(document).on('turbolinks:load',function() {
       $('#toggle-1').bootstrapToggle({
         on: 'Activo',
         off: 'Inactivo'
       });
   
   
   
       if (<%=@patient.state%> == true)
       {
          $('#toggle-1').bootstrapToggle('on')
       }
       else
       {
           $('#toggle-1').bootstrapToggle('off')
       }
     
     $('#toggle-1').change(function() {
         if ( $(this).prop('checked') == true )
         {
           $.get("change_state/true/" + <%=@patient.id%>, function(data) {
           
           })
         }
         else
         {
           $.get("change_state/false/" + <%=@patient.id%>, function(data) {
           })
         }
   
       })
     });
   
</script>

<script>
  $(document).on('turbolinks:load',function() {
      new Vue({
         el: "#app",
         data: {
             estado: [],
             estado_citas: <%=@patient.appointments.count%>,
             fecha: [],
             ultima_cita: false,
             state_button: true

         },
         created() {
                    if (this.estado_citas > 0)
                     { 
                             this.fecha = <%= @appointment_l ? get_date_array(@appointment_l.start_datetime).to_s.html_safe : []%>; 
                             this.ultima_cita = <%= @appointment_l != nil ? @appointment_l.to_json.html_safe : false%> ;
                             
                        
                     }
                     else
                     {


                     }

                },
         methods: {
           
               vigente(){

                  this.estado = "Vigente"
               },

               vencida(){
                  
                  this.estado = "Vencida"
               }, 
               cancelada(){
                  
                  this.estado = "Cancelada"
               }, 
               realizada(){

                  //this.estado = "Realizada" 
                  this.fetchUser();

                  
               }, 
               fetchUser() {
                  fetch('change_state_appointment/'+ this.ultima_cita.id +'/Realizada')
                  .then((res) => { return res.json() })
                  .then((res) => {
                        if (res.name != 0) 
                        {
                           this.fecha = res; console.log(res) ;this.state_button = false
                        }
                        else
                        {
                           this.ultima_cita =  false 
                        }
                      })
                  
               }



         }




      });

 })

</script>




















